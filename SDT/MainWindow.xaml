            </Grid>
        </materialDesign:PopupBox>

            <materialDesign:PopupBox x:Name="updatePopupBox" PlacementMode="TopAndAlignCentres" StaysOpen="False" HorizontalAlignment="Center" VerticalAlignment="Center">
